EXCHANGE=kraken
SYMBOL=BTC/USD
TIMEFRAME=5m

# Risk management
MAX_TRADES_PER_RUN=10
MAX_DRAWDOWN_PCT=5.0

# Live auto-optimization controls
AUTO_OPT_ENABLED=1              # 1 = on, 0 = off
AUTO_OPT_CHECK_EVERY_ITERS=20   # run performance/optimizer check every 20 live iterations
AUTO_OPT_MIN_TRADES=20          # minimum trades per symbol before optimizer is allowed to act
AUTO_OPT_MIN_WINRATE=40.0       # %; below this is considered degraded
AUTO_OPT_MIN_NETPNL_USD=-50.0   # if net PnL below this, considered degraded
